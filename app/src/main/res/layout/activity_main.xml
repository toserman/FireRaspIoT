<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <!--android:background="@drawable/room"-->
    <!--android:background="@android:color/darker_gray"-->
    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="368dp"
        android:layout_height="494dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <TextView
            android:id="@+id/output"
            android:layout_width="match_parent"
            android:layout_height="267dp"
            android:background="@android:color/background_dark"
            android:scrollbars="vertical"
            android:textColor="?android:attr/colorPressedHighlight" />

        <Button
            android:id="@+id/pub_msg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Publish Message (OFF PC)" />

        <Button
            android:id="@+id/srv_stop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="STOP SERVER (CANCEL TURN OFF)" />

        <Button
            android:id="@+id/clear_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Clear Text" />

        <TextView
            android:id="@+id/tvDelayPower"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:onClick="onclick"
            android:text="Power OFF Delay" />

    </LinearLayout>


</android.support.constraint.ConstraintLayout>


